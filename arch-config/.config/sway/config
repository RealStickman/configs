# mail
bindsym ctrl+mod1+b exec --no-startup-id thunderbird;focus

# Screenshots
bindsym Print exec --no-startup-id grim -g "$(slurp)" - | swappy -f -
bindsym Control+Print exec --no-startup-id sleep 2s && grim -g "$(slurp)" - | swappy -f -

