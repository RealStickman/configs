Nfs mounting arco-pc:
sudo mount 192.168.1.113:/mnt/ssd /mnt/nfs/ssd/
sudo mount 192.168.1.113:/mnt/hdd /mnt/nfs/hdd/

###Restic repos:

##B2 backups

export B2_ACCOUNT_ID=
export B2_ACCOUNT_KEY=


#arco-pc-backup home:
restic -r b2:arco-pc-backup:/home/marc init
restic -r b2:arco-pc-backup:/home/marc backup --verbose /home/marc/ --exclude-file=/home/marc/Dokumente/home-exclude.txt
restic -r b2:arco-pc-backup:/home/marc snapshots

#arco-pc-backup timeshift:
restic -r b2:arco-pc-backup:/mnt/harddrive/timeshift/snapshots init
sudo chmod -Rv 777 /mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/timeshift/
restic -r b2:arco-pc-backup:/mnt/harddrive/timeshift/snapshots backup --verbose "/mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/timeshift/snapshots/"
restic -r b2:arco-pc-backup:/mnt/harddrive/timeshift/snapshots snapshots


##Nfs backups

#raspi (ssd):
Through timeshift

#arco-pc timeshift (ssd):
restic init --repo /mnt/nfs/ssd/arco-pcbackup/timeshift/
sudo chmod -Rv 777 /mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/timeshift/
restic -r "/mnt/nfs/ssd/arco-pcbackup/timeshift/" backup --verbose "/mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/timeshift/snapshots/"

#arco-pc home Bilder (hdd):
restic init --repo /mnt/nfs/hdd/arco-pcbackup/home/Bilder/
restic -r "/mnt/nfs/hdd/arco-pcbackup/home/Bilder/" backup --verbose "/home/marc/Bilder"

#arco-pc home Dokumente (ssd):
restic init --repo /mnt/nfs/ssd/arco-pcbackup/home/Dokumente/
restic -r "/mnt/nfs/ssd/arco-pcbackup/home/Dokumente/" backup --verbose "/home/marc/Dokumente"

#arco-pc home eFisc (ssd):
restic init --repo /mnt/nfs/ssd/arco-pcbackup/home/eFisc/
restic -r "/mnt/nfs/ssd/arco-pcbackup/home/eFisc/" backup --verbose "/home/marc/eFisc"

#arco-pc home Videos (hdd):
restic init --repo /mnt/nfs/hdd/arco-pcbackup/home//Videos/
restic -r "/mnt/nfs/hdd/arco-pcbackup/home/Videos/" backup --verbose "/home/marc/Videos"

#arco-pc home Musik (hdd):
restic init --repo /mnt/nfs/hdd/arco-pcbackup/home/Musik/
restic -r "/mnt/nfs/hdd/arco-pcbackup/home/Musik/" backup --verbose "/home/marc/Musik"

#arco-pc MediaLibrary/Movies (hdd):
restic init --repo /mnt/nfs/hdd/arco-pcbackup/MediaLibrary/Movies/
restic -r "/mnt/nfs/hdd/arco-pcbackup/MediaLibrary/Movies/" backup --verbose "/mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/MediaLibrary/Movies"

#arco-pc MediaLibrary/Shows (hdd):
restic init --repo /mnt/nfs/hdd/arco-pcbackup/MediaLibrary/Shows/
restic -r "/mnt/nfs/hdd/arco-pcbackup/MediaLibrary/Shows/" backup --verbose "/mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/MediaLibrary/Shows"

#Oneplus3 backup (hdd):
restic init --repo /mnt/nfs/hdd/Oneplus3/
restic -r "/mnt/nfs/hdd/Oneplus3/" backup --verbose "/mnt/1d90c4d5-21d2-4455-bb4a-814de8496744/Phones/OnePlus 3/"